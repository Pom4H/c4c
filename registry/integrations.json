        "messages.create",
        "calls.create",
        "recordings.list"
      ],
      "workflows": ["sms-notification", "voice-verification"],
      "tags": ["sms", "voice", "communication"],
      "authentication": "basic",
      "documentation": "https://www.twilio.com/docs/usage/api"
