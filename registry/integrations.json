  "workflows": {
    "etl-pipeline": {
      "name": "ETL Data Pipeline",
      "description": "Extract, transform, load pattern for data processing",
      "category": "data",
      "dependencies": [],
      "tags": ["data", "etl", "pipeline"],
      "files": ["etl-pipeline.ts"]
    },
    "subscription-flow": {
      "name": "Subscription Signup Flow",
      "description": "Complete user subscription with payment and email",
      "category": "payments",
      "dependencies": ["stripe", "sendgrid"],
      "tags": ["payments", "subscription", "email"],
      "files": ["subscription-flow.ts"]
    },
    "notification-system": {
      "name": "Multi-channel Notification",
      "description": "Send notifications via email, SMS, and Slack",
      "category": "communication",
      "dependencies": ["sendgrid", "twilio", "slack"],
      "tags": ["notifications", "communication"],
      "files": ["notification-system.ts"]
    }
